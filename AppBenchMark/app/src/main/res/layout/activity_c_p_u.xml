<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CPUActivity"
    android:background="@drawable/backgroundactivities">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<Button
    android:id="@+id/btnback"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_back"
    android:background="@drawable/backbuttonshape"

    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="CPU benchmark"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/btnshare"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:background="@drawable/backbuttonshape"

            />
    </LinearLayout>




<br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
    android:id="@+id/btnProgress"
    android:text="Start Benchmark"
    android:textColor="@color/myBackground"
    android:background="@drawable/starbenchmark"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    app:spinning_bar_color="@color/myBackground"
    app:spinning_bar_padding="6dp"
    app:spinning_bar_width="4dp"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"

        android:background="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp">

    </androidx.cardview.widget.CardView>

</RelativeLayout>